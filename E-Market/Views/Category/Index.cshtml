@using E_Market.Core.Application.ViewModels.Categories;
@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-success">Crear nueva categoria</a>
        </div>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2>No hay Categorias</h2>
        }
        else
        {
            @foreach (CategoryViewModel item in Model)
            {
                <div class="col-4">
                    <div class="card shadow-sm">                       

                        <div class="card-body">
                            <h4 class="card-title">@item.Name</h4>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                                </div>
                                <small class="fw-bold fs-6">La cantidad de anuncios: @item.ProductsQuantity</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>